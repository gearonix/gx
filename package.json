{
  "name": "gx",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@8.15.4",
  "author": "Uzhanin Egor <egor.uzhanin@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/gearonix/gx",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gearonix/gx.git"
  },
  "bin": {
    "gx": "bin/gx.mjs"
  },
  "keywords": [
    "nx",
    "runner",
    "cli",
    "tasks-runner"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.mjs",
      "require": "./dist/main.cjs"
    }
  },
  "main": "./dist/main.cjs",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "oxlint . && eslint .",
    "lint:fix": "oxlint . && eslint . --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp && npm publish",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "bump": "taze -wi"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.12",
    "@types/ini": "^4.1.0",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.7",
    "@types/which": "^3.0.3",
    "bumpp": "^9.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-oxlint": "^0.2.7",
    "esno": "^4.0.0",
    "lint-staged": "^15.2.0",
    "oxlint": "^0.2.14",
    "pnpm": "^8.14.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "taze": "^0.13.3",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vite": "^5.0.11",
    "vitest": "^1.1.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm install && pnpm lint-staged && pnpm typecheck"
  },
  "lint-staged": {
    "*": "oxlint . && eslint . --fix"
  },
  "dependencies": {
    "@neodx/fs": "^0.0.11",
    "@neodx/std": "^0.3.0",
    "@nestjs/common": "^10.3.3",
    "@nestjs/core": "^10.3.3",
    "@nestjs/platform-express": "^10.3.3",
    "chalk": "^5.3.0",
    "envfile": "^7.1.0",
    "eslint-kit": "^10.19.0",
    "execa": "^8.0.1",
    "ini": "^4.1.2",
    "inquirer": "^9.2.15",
    "inquirer-search-list": "^1.2.6",
    "inquirer-tree-prompt": "^1.1.2",
    "nest-commander": "^3.12.5",
    "path-equal": "^1.2.5",
    "which": "^4.0.0",
    "zod": "^3.22.4"
  }
}
